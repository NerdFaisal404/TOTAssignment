<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_margin"
    android:paddingRight="@dimen/activity_margin"
    android:background="#fff"
    android:paddingTop="@dimen/activity_margin">

    <TextView android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_10"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="8sp"
        android:text="Student Add"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/lbl_new_student_title"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/edt_student_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ccc"
        android:hint="Enter Your Name"
        android:inputType="textCapSentences|textMultiLine"
        android:lines="1"
        android:padding="10dp"
        android:textSize="@dimen/input_new_student" />


    <EditText
        android:id="@+id/edt_student_instution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ccc"
        android:layout_marginTop="5dp"
        android:hint="Enter Your Institution"
        android:inputType="textCapSentences|textMultiLine"
        android:lines="1"
        android:padding="10dp"
        android:textSize="@dimen/input_new_student" />


    <EditText
        android:id="@+id/edt_student_moblie_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ccc"
        android:layout_marginTop="5dp"
        android:hint="Enter Your Mobile NO"
        android:inputType="textCapSentences|textMultiLine"
        android:lines="1"
        android:padding="10dp"
        android:textSize="@dimen/input_new_student" />

    <EditText
        android:id="@+id/edt_student_email_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ccc"
        android:layout_marginTop="5dp"
        android:hint="Enter Your Email Address"
        android:inputType="textCapSentences|textMultiLine"
        android:lines="1"
        android:padding="10dp"
        android:textSize="@dimen/input_new_student" />

</LinearLayout>